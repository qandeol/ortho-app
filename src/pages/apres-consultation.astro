---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Après Consultation | Ma Santé – Pied Cheville">
  <div class="max-w-4xl mx-auto space-y-8">
    <!-- Header -->
    <div class="text-center">
      <h1 class="text-3xl font-bold text-gray-900 mb-4">Après ma consultation</h1>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Relisez le compte rendu de consultation, comprenez votre pathologie et organisez la suite de vos soins
      </p>
    </div>

    <!-- Checklist -->
    <div class="bg-white rounded-xl shadow-soft p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Checklist post-consultation</h2>
      <div class="space-y-4">
        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="pharmacie" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Pharmacie</span>
            <p class="text-sm text-gray-600">Récupérer les médicaments prescrits (anticoagulant, anti-inflammatoire, antalgique, vitamine C, Primpéran)</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="imagerie" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Imagerie</span>
            <p class="text-sm text-gray-600">Prendre rendez-vous pour les examens complémentaires</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="kine" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Kinésithérapie</span>
            <p class="text-sm text-gray-600">Prendre rendez-vous avec le kinésithérapeute</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="infirmier" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Infirmier·e</span>
            <p class="text-sm text-gray-600">Organiser les soins infirmiers si nécessaire</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="exercices" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Exercices maison</span>
            <p class="text-sm text-gray-600">Commencer les exercices prescrits</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="repos" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Repos relatif</span>
            <p class="text-sm text-gray-600">Adapter ses activités selon les recommandations</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="materiel" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Matériel post-opératoire</span>
            <p class="text-sm text-gray-600">Se procurer : chaussure post-op, attelle cheville, botte avec/sans appui, béquilles</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="arret-travail" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Arrêt de travail</span>
            <p class="text-sm text-gray-600">Organiser l'arrêt de travail si prescrit</p>
          </div>
        </label>

        <label class="flex items-center p-4 bg-gray-50 rounded-lg hover:bg-gray-100 cursor-pointer transition-colors">
          <input type="checkbox" name="checklist" value="prochains-rdv" class="w-5 h-5 text-primary-600 rounded border-gray-300 focus:ring-primary-500">
          <div class="ml-3">
            <span class="text-sm font-medium text-gray-900">Prochains RDV</span>
            <p class="text-sm text-gray-600">Prendre rendez-vous pour le suivi</p>
          </div>
        </label>
      </div>

      <!-- Boutons d'action -->
      <div class="flex flex-wrap gap-4 pt-6 mt-6 border-t border-gray-200">
        <button 
          id="saveChecklistBtn"
          class="px-6 py-3 bg-primary-600 text-white font-medium rounded-lg hover:bg-primary-700 transition-colors"
        >
          Sauvegarder
        </button>
        <button 
          id="clearChecklistBtn"
          class="px-6 py-3 bg-gray-600 text-white font-medium rounded-lg hover:bg-gray-700 transition-colors"
        >
          Effacer
        </button>
        <button 
          id="printChecklistBtn"
          class="px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors"
        >
          Imprimer / PDF
        </button>
      </div>
    </div>

    <!-- Liens vers praticiens -->
    <div class="bg-white rounded-xl shadow-soft p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Liens utiles - Votre réseau de soins</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="bg-blue-50 rounded-lg p-4">
          <h3 class="font-medium text-blue-900 mb-2">Pharmacies</h3>
          <p class="text-blue-800 text-sm">Trouvez une pharmacie près de chez vous</p>
          <button class="mt-2 text-blue-600 text-sm font-medium">Voir sur Google Maps</button>
        </div>
        <div class="bg-green-50 rounded-lg p-4">
          <h3 class="font-medium text-green-900 mb-2">Kinésithérapeutes</h3>
          <p class="text-green-800 text-sm">Prenez RDV avec un kiné</p>
          <button class="mt-2 text-green-600 text-sm font-medium">Rechercher</button>
        </div>
        <div class="bg-yellow-50 rounded-lg p-4">
          <h3 class="font-medium text-yellow-900 mb-2">Infirmiers libéraux</h3>
          <p class="text-yellow-800 text-sm">Soins à domicile</p>
          <button class="mt-2 text-yellow-600 text-sm font-medium">Contacter</button>
        </div>
        <div class="bg-purple-50 rounded-lg p-4">
          <h3 class="font-medium text-purple-900 mb-2">Podologues</h3>
          <p class="text-purple-800 text-sm">Soins des pieds</p>
          <button class="mt-2 text-purple-600 text-sm font-medium">Prendre RDV</button>
        </div>
        <div class="bg-red-50 rounded-lg p-4">
          <h3 class="font-medium text-red-900 mb-2">Ostéopathes</h3>
          <p class="text-red-800 text-sm">Traitements manuels</p>
          <button class="mt-2 text-red-600 text-sm font-medium">Rechercher</button>
        </div>
        <div class="bg-indigo-50 rounded-lg p-4">
          <h3 class="font-medium text-indigo-900 mb-2">Médecins du sport</h3>
          <p class="text-indigo-800 text-sm">Spécialistes du sport</p>
          <button class="mt-2 text-indigo-600 text-sm font-medium">Prendre RDV</button>
        </div>
      </div>
    </div>

    <!-- FAQ -->
    <div class="bg-white rounded-xl shadow-soft p-8">
      <h2 class="text-xl font-semibold text-gray-900 mb-6">Questions fréquentes - Retour à la maison</h2>
      <div class="space-y-6">
        <div class="border-l-4 border-primary-500 pl-4">
          <h3 class="font-medium text-gray-900 mb-2">Quand puis-je reprendre mes activités normales ?</h3>
          <p class="text-gray-600 text-sm">
            Cela dépend de votre pathologie et du traitement prescrit. Suivez les recommandations de votre médecin et adaptez progressivement vos activités.
          </p>
        </div>

        <div class="border-l-4 border-primary-500 pl-4">
          <h3 class="font-medium text-gray-900 mb-2">Que faire si la douleur augmente ?</h3>
          <p class="text-gray-600 text-sm">
            Si la douleur s'aggrave malgré les médicaments prescrits, contactez votre médecin ou rendez-vous aux urgences si nécessaire.
          </p>
        </div>

        <div class="border-l-4 border-primary-500 pl-4">
          <h3 class="font-medium text-gray-900 mb-2">Comment bien suivre mon traitement ?</h3>
          <p class="text-gray-600 text-sm">
            Respectez les horaires de prise des médicaments, suivez les exercices prescrits et n'hésitez pas à poser des questions à votre pharmacien.
          </p>
        </div>

        <div class="border-l-4 border-primary-500 pl-4">
          <h3 class="font-medium text-gray-900 mb-2">Quand dois-je revenir en consultation ?</h3>
          <p class="text-gray-600 text-sm">
            Respectez la date de votre prochain rendez-vous. En cas de problème, n'hésitez pas à contacter le secrétariat pour avancer le rendez-vous.
          </p>
        </div>
      </div>
    </div>

    <!-- Alertes importantes -->
    <div class="bg-red-50 rounded-xl p-6">
      <div class="flex items-start space-x-4">
        <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-red-900 mb-2">Signes d'alerte (red flags)</h3>
          <p class="text-red-700 mb-2">Consultez immédiatement si vous observez :</p>
          <ul class="text-red-600 text-sm space-y-1">
            <li>• Augmentation brutale de la douleur</li>
            <li>• Gonflement important et chaleur</li>
            <li>• Fièvre ou frissons</li>
            <li>• Difficulté à bouger l'articulation</li>
            <li>• Changement de couleur de la peau</li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Date de mise à jour -->
    <div class="text-center text-sm text-gray-500 pt-4">
      <p>Dernière mise à jour : 6 janvier 2025</p>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Chargement des données sauvegardées
      function loadChecklist() {
        try {
          const savedData = localStorage.getItem('postConsultationChecklist');
          if (savedData) {
            const checkedItems = JSON.parse(savedData);
            checkedItems.forEach(item => {
              const checkbox = document.querySelector(`input[value="${item}"]`);
              if (checkbox) checkbox.checked = true;
            });
          }
        } catch (error) {
          console.error('Erreur lors du chargement:', error);
        }
      }

      // Sauvegarde de la checklist
      function saveChecklist() {
        try {
          const checkboxes = document.querySelectorAll('input[name="checklist"]:checked');
          const checkedItems = Array.from(checkboxes).map(cb => cb.value);
          
          localStorage.setItem('postConsultationChecklist', JSON.stringify(checkedItems));
          
          // Afficher confirmation
          const saveBtn = document.getElementById('saveChecklistBtn');
          if (saveBtn) {
            const originalText = saveBtn.textContent;
            saveBtn.textContent = 'Sauvegardé !';
            saveBtn.classList.add('bg-green-600', 'hover:bg-green-700');
            saveBtn.classList.remove('bg-primary-600', 'hover:bg-primary-700');
            
            setTimeout(() => {
              saveBtn.textContent = originalText;
              saveBtn.classList.remove('bg-green-600', 'hover:bg-green-700');
              saveBtn.classList.add('bg-primary-600', 'hover:bg-primary-700');
            }, 2000);
          }
        } catch (error) {
          console.error('Erreur lors de la sauvegarde:', error);
        }
      }

      // Effacer la checklist
      function clearChecklist() {
        if (confirm('Êtes-vous sûr de vouloir effacer toutes les données ?')) {
          localStorage.removeItem('postConsultationChecklist');
          document.querySelectorAll('input[name="checklist"]').forEach(cb => cb.checked = false);
        }
      }

      // Impression de la checklist
      function printChecklist() {
        try {
          const checkedItems = document.querySelectorAll('input[name="checklist"]:checked');
          if (checkedItems.length === 0) {
            alert('Aucun élément sélectionné à imprimer');
            return;
          }
          
          const printWindow = window.open('', '_blank');
          let html = `
            <html>
              <head>
                <title>Checklist Post-Consultation - Ma Santé Pied Cheville</title>
                <style>
                  body { font-family: Arial, sans-serif; margin: 20px; }
                  h1 { color: #0ea5e9; }
                  .item { margin-bottom: 10px; padding: 10px; background: #f8f9fa; border-radius: 5px; }
                  .completed { background: #d4edda; }
                </style>
              </head>
              <body>
                <h1>Checklist Post-Consultation</h1>
                <p><strong>Date :</strong> ${new Date().toLocaleDateString('fr-FR')}</p>
                <hr>
                <h2>Éléments complétés :</h2>
          `;
          
          checkedItems.forEach(checkbox => {
            const label = checkbox.closest('label');
            const title = label.querySelector('.text-sm.font-medium')?.textContent || 'Élément';
            const description = label.querySelector('.text-sm.text-gray-600')?.textContent || '';
            html += `
              <div class="item completed">
                <strong>✓ ${title}</strong><br>
                <small>${description}</small>
              </div>
            `;
          });
          
          html += `
                <hr>
                <p><em>Généré par Ma Santé – Pied Cheville (Ortho Charcot Lyon)</em></p>
              </body>
            </html>
          `;
          
          printWindow.document.write(html);
          printWindow.document.close();
          printWindow.print();
        } catch (error) {
          console.error('Erreur lors de l\'impression:', error);
        }
      }

      // Event listeners
      const saveBtn = document.getElementById('saveChecklistBtn');
      const clearBtn = document.getElementById('clearChecklistBtn');
      const printBtn = document.getElementById('printChecklistBtn');

      if (saveBtn) saveBtn.addEventListener('click', saveChecklist);
      if (clearBtn) clearBtn.addEventListener('click', clearChecklist);
      if (printBtn) printBtn.addEventListener('click', printChecklist);

      // Charger les données au chargement de la page
      loadChecklist();
    });
  </script>
</BaseLayout>
